{
	
	"name": "Mnemosyne",
	"version": "1.0.0",
	
	"description": "Mnemosyne 是一个密码生成工具，可以帮助你生成密码，免去你记忆密码的痛苦。",
	"icons": {
		"16": "./img/16.png",
		"48": "./img/48.png",
		"128": "./img/128.png"
	},
	
	
	"browser_action": {
		"default_icon": { 
			"19": "./img/19.png",
			"38": "./img/38.png"
		},
		"default_title": "Mnemosyne",
		"default_popup": "index.html"
	},
	
	"background": {
		"scripts" : ["/js/jquery-2.1.4.min.js", "/js/web.js", "/js/spark-md5.js", "/js/bootstrap.js"]
	},
	
	"permissions": [
		"http://*/*",
		"https://*/*"
	],
	

	"manifest_version": 2
}
